#pragma once

#include "level_objects.h"

class geometry_selector
{

public:

  geometry_selector()
  {
  }

  template <typename object_type> [[nodiscard]] auto get(const object_type& object) -> ID2D1Geometry*
  {
    return Get(object);
  }

private:

  [[nodiscard]] auto Get(const player_ship& object) -> ID2D1Geometry*;
  [[nodiscard]] auto Get(const level_target& object) -> ID2D1Geometry*;
  [[nodiscard]] auto Get(const mine& object) -> ID2D1Geometry*;
  [[nodiscard]] auto Get(const level_asteroid& object) -> ID2D1Geometry*;
  [[nodiscard]] auto Get(const duct_fan& object) -> ID2D1Geometry*;

};
